@model CoffeeStoreAspCore.ViewModels.System.RegisterRequest

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/Asset/Login/vendor/bootstrap.css">

    <link rel="stylesheet" href="~/Asset/Login/1.css">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.4.0/animate.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="~/Asset/js/css.css" rel="stylesheet" />
</head>
<body>
    <script>
        $(function () {
            new WOW().init();
        });
    </script>
    <header>
        @await Html.PartialAsync("../Shared/_MenuLayout1.cshtml", ViewData)

    </header>
    <main>
        <div class="container   " style="margin-top:20px; margin-bottom:20px">



            <div class="row  ">
                <div class="col-xs-2"></div>
                <div class="col-xs-8">
                    <form class="login wow fadeIn" asp-action="DangKi" method="post" asp-controller="register">
                        <h1 class="wow fadeIn " >Đăng Ký</h1>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group wow fadeIn">
                            <label hidden asp-for="Id" class="control-label"></label>
                            <input hidden asp-for="Id" class="form-control" />
                            <span asp-validation-for="Id" class="text-danger"></span>
                        </div>
                        <div class="form-group wow fadeIn">
                            <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group wow fadeIn">
                            <label asp-for="FullName" class="control-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="form-group wow fadeIn">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group wow fadeIn">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group wow fadeIn ">
                            <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group wow fadeIn">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group wow fadeIn">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group  ">
                            <a  asp-action="index" asp-controller="login" class="btn btn-warning  "> << Trở lại </a>

                            <input type="submit" value="Đăng kí" class="btn btn-danger wow slideInRight" />
                        </div>
                        <div>

                        </div>
                    </form>
                </div>



            </div>
        </div>


    </main>
    <footer>
        <div class="nenden">
            <div class="container ">

                <div class="row footer1 ">
                    <div class="col-xs-2 wow flip">
                        <img src="https://localhost:5001/user-content/HomeCoffee.png" alt="" class="img-thumbnail">
                    </div>
                    <div class="col-xs-3 wow fadeInUp">
                        <h2>Địa chỉ:</h2>
                        <p> <i class=" fa fa-map-marker">  Kí túc xá khu B, Đông Hòa, Dĩ An, Bình Dướng</i></p>
                    </div>
                    <div class="col-xs-3 wow fadeInUp">
                        <h2> Liên hệ:</h2>

                        <p>  <i class="fa fa-envelop"> Email: homecoffee@gmail.com</i></p>
                        <p> <i class=" fa fa-phone"> Phone: 0326837276</i></p>
                    </div>
                    <div class="col-xs-3 text-center wow fadeInUp">
                        <h2> Về chúng tôi:</h2>

                        <p>  Điều khoản và điều kiện</p>
                        <p> Chính sách bảo mật</p>
                    </div>

                </div>
                <hr>
                <div class="row footer2">
                    <div class="col-xs-3">

                    </div>
                    <div class="col-xs-6">
                        <h6> <small>Copyright © 2019 Home Coffee. All rights reserved.</small></h6>
                    </div>

                </div>
            </div>
        </div>
    </footer>




    <script type="text/javascript" src="~/Asset/Login/vendor/bootstrap.js"></script>

    <script type="text/javascript" src="~/Asset/Login/1.js"></script>
</body>
</html>

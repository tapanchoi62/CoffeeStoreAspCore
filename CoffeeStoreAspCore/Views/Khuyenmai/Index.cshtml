@model IEnumerable<CoffeeStoreAspCore.ViewModels.Catalog.Vouchers.VoucherViewModel>;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/Asset/trangchu/css/1.css">

    <link href="https://fonts.googleapis.com/css?family=Oleo+Script:400,700&display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


</head>
<body >
    <header>
        @await Html.PartialAsync("../Shared/_MenuLayout1.cshtml")

    </header>
    <main class="container-fluid">
        <div class="img-thumbnail" style="background-image:url('asset/trangchu/image/km.png');height:200px">
            <h2 style="display: flex;height: 55px; align-items: center;justify-content: center">
               

            </h2>
        </div>
        <div class=" container">
            @foreach (var item in Model)
            {
                


            <div class="img-thumbnail"style="background-image:url('asset/trangchu/image/Capture.png');height:350px; color:#ffffff">
                <h4 style="display: flex;height: 55px; align-items: center;justify-content: center;padding-top:150px">
                    Chương trình @item.Name

                </h4>
                @if (item.DiscountPercent != null)
                {
                    <h5 style="display: flex;height: 55px; align-items: center;justify-content: center">

                        Giảm ngay    @item.DiscountPercent %  cho tổng hóa đơn khi nhập mã  @item.CodeText  .
                    </h5>
                }
                @if (item.DiscountAmount != null)
                {
                    <a style="display: flex;height: 55px; align-items: center;justify-content: center">
                        Giảm ngay   @item.DiscountAmount VND cho tổng hóa đơn khi nhập mã  @item.CodeText  .
                    </a>
                }

                <h6 style="display: flex;height: 55px; align-items: center;justify-content: center;color:#e91515;padding-top:30px">
                    Áp dụng cho @item.AvailableTimes khách hàng đầu tiên nhanh tay nhất.
                </h6>
                <h6 style="display: flex;height: 55px; align-items: center;justify-content: center;color:#e91515;padding-bottom:30px">
                    Áp dụng từ @item.StartDay đến
                    @item.EndDay
                </h6>
            </div>
                <hr style="margin-bottom:50px" />
            }
        </div>
       
    </main>
    <footer>
        <div class="nenden">
            <div class="container ">

                <div class="row footer1 ">
                    <div class="col-xs-2 wow flip">
                        <img src="https://localhost:5001/user-content/HomeCoffee.png" alt="" class="img-thumbnail">
                    </div>
                    <div class="col-xs-3 wow fadeInUp">
                        <h2>Địa chỉ:</h2>
                        <p> <i class=" fa fa-map-marker">  Kí túc xá khu B, Đông Hòa, Dĩ An, Bình Dướng</i></p>
                    </div>
                    <div class="col-xs-3 wow fadeInUp">
                        <h2> Liên hệ:</h2>

                        <p>  <i class="fa fa-envelop"> Email: homecoffee@gmail.com</i></p>
                        <p> <i class=" fa fa-phone"> Phone: 0326837276</i></p>
                    </div>
                    <div class="col-xs-3 text-center wow fadeInUp">
                        <h2> Về chúng tôi:</h2>

                        <p>  Điều khoản và điều kiện</p>
                        <p> Chính sách bảo mật</p>
                    </div>

                </div>
                <hr>
                <div class="row footer2">
                    <div class="col-xs-3">

                    </div>
                    <div class="col-xs-6">
                        <h6> <small>Copyright © 2019 Home Coffee. All rights reserved.</small></h6>
                    </div>

                </div>
            </div>
        </div>
    </footer>
</body>
</html>


@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">
<head>
    <title> Document  </title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Asset/Login/vendor/bootstrap.css">

    <link rel="stylesheet" href="~/Asset/Login/1.css">
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.4.0/animate.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="~/Asset/js/css.css" rel="stylesheet" />
</head>
<body>
    <script>
        $(function () {
            new WOW().init();
        });
    </script>
    <header>
        @await Html.PartialAsync("../Shared/_MenuLayout1.cshtml", ViewData)

    </header>

    <main>
        <div class="container contact-form">
            <div class="row  ">
                <div class="col-xs-3">

                </div>
                <div class="col-xs-6">
                    <form class="login" asp-controller="login" asp-action="dangnhap" method="post">
                        <h1 class="wow fadeIn">Đăng nhập</h1>
                        <div class="form-group wow fadeIn">
                            <label for="">User name:</label>
                            <input type="text" class="form-control" id="email" name="username" value="@ViewBag.c">
                        </div>
                        <div class="form-group wow fadeIn">
                            <label for="pwd">Password:</label>
                            <input type="password" class="form-control" id="pwd" name="password">
                        </div>

                        <div class="form-group form-check wow fadeIn    ">
                            <label class="form-check-label">
                                <input class="form-check-input" name="remember" checked type="checkbox"> Remember me
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary wow slideInRight">Đăng nhập</button>
                        <a asp-controller="home" asp-action="index" class="btn btn-secondary">Trở lại</a>
                        <br />
                        <br />
                        <p> Nếu chưa có tài khoản thì đăng kí tại đây </p>
                        <a asp-controller="register" asp-action="index" class="btn btn-danger wow slideInRight">Đăng kí</a>
                        <hr>

                    </form>

                </div>



            </div>
        </div>
    </main>
    <footer>
        <div class="nenden">
            <div class="container ">

                <div class="row footer1 ">
                    <div class="col-xs-2 wow flip">
                        <img src="https://localhost:5001/user-content/HomeCoffee.png" alt="" class="img-thumbnail">
                    </div>
                    <div class="col-xs-3 wow fadeInUp">
                        <h2>Địa chỉ:</h2>
                        <p> <i class=" fa fa-map-marker">  Kí túc xá khu B, Đông Hòa, Dĩ An, Bình Dướng</i></p>
                    </div>
                    <div class="col-xs-3 wow fadeInUp">
                        <h2> Liên hệ:</h2>

                        <p>  <i class="fa fa-envelop"> Email: homecoffee@gmail.com</i></p>
                        <p> <i class=" fa fa-phone"> Phone: 0326837276</i></p>
                    </div>
                    <div class="col-xs-3 text-center wow fadeInUp">
                        <h2> Về chúng tôi:</h2>

                        <p>  Điều khoản và điều kiện</p>
                        <p> Chính sách bảo mật</p>
                    </div>

                </div>
                <hr>
                <div class="row footer2">
                    <div class="col-xs-3">

                    </div>
                    <div class="col-xs-6">
                        <h6> <small> &copy Copyright  2019 Home Coffee. All rights reserved.</small></h6>
                    </div>

                </div>
            </div>
        </div>
    </footer>





    <script type="text/javascript" src="~/Asset/Login/vendor/bootstrap.js"></script>

    <script type="text/javascript" src="~/Asset/Login/1.js"></script>
</body>
</html>


@model CoffeeStoreAspCore.ViewModels.System.UserViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Asset/Menu/vendor/bootstrap.css">

    <link rel="stylesheet" href="~/Asset/Menu/vendor/font-awesome.css">

    <link href="~/Asset/trangchu/css/1.css" rel="stylesheet" />
    <link href="~/Asset/dathang/css.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Oleo+Script:400,700&amp;display=swap" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.4.0/animate.min.css">
    <link rel="stylesheet" href="~/Asset/trangchu/vendor/bootstrap.css">

    <link rel="stylesheet" href="~/Asset/trangchu/vendor/font-awesome.css">
</head>

<body>
    <script>
        $(function () {
            new WOW().init();
        });
    </script>
    <style type="text/css">
        .btn :hover {
            transform: scale(1.1);
        }
    </style>
    <header>
        @await Html.PartialAsync("../Shared/_MenuLayout1.cshtml", ViewData);

    </header>
    <main>
        <div class="container wow fadeInUp"  style="margin-top:50px">
            <h4>Hình Thức Thanh Toán</h4>
            <hr />
            <div style="color:#000000; margin-top:30px; padding-bottom:20px;font-size:20px">
                <input type="radio" checked name="thanhtoan" />Thanh toán khi nhận hàng <i class="fa fa-home" aria-hidden="true"></i> <br />
                <input type="radio" name="thanhtoan" /> Thẻ ATM nội địa <i class="fa fa-credit-card" aria-hidden="true"></i> <i class="fa fa-cc-visa" aria-hidden="true"></i>
                <hr />
            </div>
            <h4 style="margin-top:30px">Thông tin Khách Hàng</h4>
            <hr />
            <form asp-action="thanhtoan" asp-controller="dathang" method="post">

                <div class="form-group" style="font-size:20px">

                    <label hidden asp-for="Id" class="control-label"></label>
                    <input hidden asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <label asp-for="Name" class="control-label"></label>
                    <input disabled asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">

                    <label asp-for="Email" class="control-label"></label>
                    <input disabled asp-for="Email" class="form-control" />

                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>


                <div class="form-group wow slideInRight" style="margin-top:20px; font-size:20px">
                    <button class="btn btn-warning btn " style="color:#ffffff" asp-action="index" asp-controller="cart"><i class="fa fa-angle-left"></i> Quay lại</button>

                    <button class="btn btn-info wow slideInRight" data-wow-duration="2s" type="submit" asp-action="thanhtoan" asp-controller="dathang">Đặt hàng</button>
                </div>

                <div class="form-group " style="margin-top:20px; font-size:20px">


                </div>

            </form>
        </div>
    </main>
    <footer>
        <div class="nenden">
            <div class="container ">

                <div class="row footer1 ">
                    <div class="col-xs-2 wow flip">
                        <img src="https://localhost:5001/user-content/HomeCoffee.png" alt="" class="img-thumbnail">
                    </div>
                    <div class="col-xs-3 wow fadeInUp">
                        <h2>Địa chỉ:</h2>
                        <p> <i class=" fa fa-map-marker">  Kí túc xá khu B, Đông Hòa, Dĩ An, Bình Dướng</i></p>
                    </div>
                    <div class="col-xs-3 wow fadeInUp">
                        <h2> Liên hệ:</h2>

                        <p>  <i class="fa fa-envelop"> Email: homecoffee@gmail.com</i></p>
                        <p> <i class=" fa fa-phone"> Phone: 0326837276</i></p>
                    </div>
                    <div class="col-xs-3 text-center wow fadeInUp">
                        <h2> Về chúng tôi:</h2>

                        <p>  Điều khoản và điều kiện</p>
                        <p> Chính sách bảo mật</p>
                    </div>

                </div>
                <hr>
                <div class="row footer2">
                    <div class="col-xs-3">

                    </div>
                    <div class="col-xs-6">
                        <h6> <small>Copyright © 2019 Home Coffee. All rights reserved.</small></h6>
                    </div>

                </div>
            </div>

        </div>
    </footer>


</body>
</html>
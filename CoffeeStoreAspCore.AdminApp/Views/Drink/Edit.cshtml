@model CoffeeStoreAspCore.ViewModels.Catalog.DrinkUpdateRequest
@using  CoffeeStoreAspCore.ViewModels.Menu
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">



    <div class="card mb-4 mt-4  wow fadeIn">
        <div class="card-header"><i class="fas fa-table mr-1"></i>Edit Drink</div>
        <div class="card-body">
            


                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Edit" method="post" asp-controller="Drink">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label hidden asp-for="Id" class="control-label"></label>
                                <input hidden asp-for="Id" class="form-control" />
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="UnitPrice" class="control-label"></label>
                                <input asp-for="UnitPrice" class="form-control" />
                                <span asp-validation-for="UnitPrice" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="IdMenu" class="control-label"></label>
                                <select asp-for="IdMenu" class="form-control">
                                    @foreach (var item in ViewBag.listMenu)
                                    {
                                        <option value="@item.Id">@item.Name </option>
                                    }

                                </select>
                                <span asp-validation-for="IdMenu" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ThumbnailImage" class="control-label"></label>
                                <input asp-for="ThumbnailImage" class="form-control" />
                                <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <a style="color:#ffffff" class=" btn btn-warning " asp-action="Index"><i class="fas fa-reply"></i>   Back to List</a>

                                <input style="width:140px" type="submit" value="Save" class="btn btn-success wow bounce" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                  </div>

        </div>
    </div>
</div>
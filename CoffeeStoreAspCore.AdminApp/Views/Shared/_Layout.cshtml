    <script src="/assets/demo/datatables-demo.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels@0.7.0"></script>
    <script>
        $(function () {
            new WOW().init();
        });
    </script>
    @RenderSection("Scripts", required: false)

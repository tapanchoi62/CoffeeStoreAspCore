@model CoffeeStoreAspCore.ViewModels.Catalog.Bills.BillViewModel
@using CoffeeStoreAspCore.Data.Enums
@{
    ViewData["Title"] = "ChangeStatus";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">

    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>BillStatus</div>
        <div class="card-body">
            <div class="table-responsive">
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="ChangeStatus" method="post" asp-controller="Order">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label hidden asp-for="Id" class="control-label"></label>
                                <input hidden asp-for="Id" class="form-control" />
                                <span asp-validation-for="Id" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="status" class="control-label"></label>
                                <select asp-for="status" class="form-control"
                                        asp-items="@new SelectList(Enum.GetNames(typeof(OrderStatus)))"></select>
                                <span asp-validation-for="status" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-action="Index"><i class="fas fa-reply"></i>  Back to List</a>
                </div>

            </div>
        </div>
    </div>
</div>